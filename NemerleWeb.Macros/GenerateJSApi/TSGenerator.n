      // Generate types members
      //GenerateTypesMembers(Scope(jsApiNamespace), tsAst);
      
      // Then generate the rest: variables, functions.
      //GenerateRestMembers(Scope(jsApiNamespace), jsApiModule, tsAst);
      
      // Finalize
      //jsApiModule.Compile();
    }
    
