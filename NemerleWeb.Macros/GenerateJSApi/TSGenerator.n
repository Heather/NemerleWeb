    #region Generate types members
    
    private GenerateTypesMembers(scope : Scope, members : IEnumerable[DeclarationElement]) : void
    {
      foreach(mem in members) 
      { 
      | InterfaceDeclaration(value) => CreateInterfaceMembers(scope, value)
      //| AmbientDeclaration(value) => GenerateTypesAmbient(scope, value)
      | _ => ()
      }
    }
    
