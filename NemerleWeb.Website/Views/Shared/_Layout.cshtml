<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/prettify.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Action("NemerleWebJs", "NemerleWebResource")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/sammy-0.7.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/prettify.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/lang-n.js")" type="text/javascript"></script>
    <script src="/signalr/hubs" type="text/javascript"></script>

</head>
<body onload="prettyPrint()">
    <div class="container-narrow">
        <div class="header">
            <ul class="nav nav-pills pull-right">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Tutorial", "Tutorial", "Home")</li>
                <li>@Html.ActionLink("Samples", "Samples", "Home")</li>
                <li><a href="https://github.com/NemerleWeb/NemerleWeb">Github repo</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                      Tests <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Unit tests", "Index", "UnitTests")</li>
                        <li>@Html.ActionLink("Template tests", "Index", "TemplateTests")</li>
                        <li>@Html.ActionLink("Server tests", "Index", "ServerTests")</li>
                    </ul>
                </li>                
            </ul>
            <h2 class="text-muted">Nemerle Web</h2>
        </div>
        
        @RenderBody()
    </div>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.header a[href="' + this.location.pathname + '"]').parent().addClass('active');
        });
    </script>
</body>
</html>
