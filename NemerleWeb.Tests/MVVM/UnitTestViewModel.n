  [ViewModel]
  public class UnitTestViewModel
  {
    Results : List[(string * bool)] { get; set; }
    
    [JsModel]
    class SomeDisposable : IDisposable
    {
      public Dispose() : void
      {
        _ = "Do something";
      }
    }
